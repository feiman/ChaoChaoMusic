<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/playing_bg2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/actionbar_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.yxc.chaochaomusic.widget.MarqueeTextView
                android:id="@+id/musicPlay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="musicName"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/musicPlay_Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="musicAuthor"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/list_detail_icn_share" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/showLyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:src="@mipmap/note_btn_love" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:src="@mipmap/list_detail_icn_dld" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:src="@mipmap/list_detail_icn_cmt" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:src="@mipmap/actionbar_more" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/00:00"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_playPattern"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@mipmap/play_icn_loop" />


        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@mipmap/play_btn_prev" />

        <ImageView
            android:id="@+id/iv_playOrPause"
            android:layout_width="35dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:src="@mipmap/play_rdi_btn_pause" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@mipmap/play_btn_next" />


        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@mipmap/play_icn_src_prs" />

    </LinearLayout>

</LinearLayout>
